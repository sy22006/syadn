<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/statr_name"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_normal_shape"
            android:hint="@string/statrname"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="苏州街"
            android:textColorHint="#b3b3b3"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/end_name"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_normal_shape"
            android:hint="@string/endname"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="陶然亭"
            android:textColorHint="#b3b3b3"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_search"
                style="@style/Smile.TextView._White"
                android:layout_width="60dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/btn_login_selector"
                android:text="@string/search"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_line"
                style="@style/Smile.TextView._White"
                android:layout_width="60dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/btn_login_selector"
                android:text="@string/addline"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!--
         <com.anhry.subway.view.xlist.XListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/base_horizontal_line"
        android:dividerHeight="1dp"
        android:fadingEdgeLength="0dp"
        android:fastScrollEnabled="true"
        android:paddingBottom="10dp" />-->

    <ListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_text_white"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/base_horizontal_line"
        android:dividerHeight="1dp" />

    <ProgressBar
        android:id="@+id/empview"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/emptext"
        android:layout_width="fill_parent"
        android:text="无数据"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        />

</LinearLayout>