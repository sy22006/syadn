<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black_half_transparent" >

        <RelativeLayout
            android:id="@+id/rl_user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_textsize_radiobg_selector" >

            <ImageView
                android:id="@+id/img_userhead"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_round_head" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_userhead"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/right_menu_login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_user_login"
            android:layout_marginTop="14dp" >

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:background="@drawable/dialog_textsize_radiobg_selector"
                android:drawableTop="@drawable/title_btn_right2"
                android:gravity="center"
                android:text="搜 索"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/dialog_textsize_radiobg_selector"
                android:drawableTop="@drawable/main_setting"
                android:text="设 置"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/bg_color" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="基本信息"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_medium" />

            <RelativeLayout
                android:id="@+id/rl_userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_userId"
                android:background="@drawable/home_list_selector"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="15dp" 
                android:visibility="invisible"
                >

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="@color/text_deep_black"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/tv_userName2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_big" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/setting_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_userId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_info"
                android:paddingLeft="30dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tv_userId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textColor="@color/text_deep_black"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/tv_userId2"
                     android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_big"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shoucang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_userName"
                android:background="@drawable/home_list_selector"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="我的收藏"
                    android:textColor="@color/text_deep_black"
                    android:textSize="@dimen/text_big" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/setting_right" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_out"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_shoucang"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_login_selector"
                android:text="注  销"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>